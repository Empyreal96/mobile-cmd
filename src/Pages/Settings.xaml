<Page
    x:Class="Command_Prompt.Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Command_Prompt.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Pivot>
            <PivotItem Header="Apperance">
                <StackPanel>
                    <TextBlock Foreground="Red">To apply these settings you need to restart mobile-cmd</TextBlock>
                    <ComboBox
                        x:Name="FontSelection"
                        Width="200"
                        Header="Font"
                        PlaceholderText="Select a Font"
                        SelectionChanged="ComboBox_SelectionChanged">
                        <x:String>Cascadia Code</x:String>
                        <x:String>Lucida Console</x:String>
                        <x:String>Segoe UI</x:String>
                    </ComboBox>
                </StackPanel>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
